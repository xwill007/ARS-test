{
  "version": "1.0.0",
  "description": "Configuración base para AR estereoscópico - Las configuraciones de usuario se guardan en localStorage",
  "deviceProfiles": {
    "mobile": {
      "arSeparation": 24,
      "arWidth": 320,
      "arHeight": 400,
      "offsetL": -5,
      "offsetR": 5,
      "zoom": 1.1,
      "cameraResolution": "720p",
      "selectedOverlays": ["vrConeOverlay"]
    },
    "tablet": {
      "arSeparation": 35,
      "arWidth": 400,
      "arHeight": 500,
      "offsetL": -8,
      "offsetR": 8,
      "zoom": 1.15,
      "cameraResolution": "1080p",
      "selectedOverlays": ["vrConeOverlay", "vrConeR3FVideoOverlay"]
    },
    "desktop": {
      "arSeparation": 50,
      "arWidth": 450,
      "arHeight": 550,
      "offsetL": -12,
      "offsetR": 12,
      "zoom": 1.2,
      "cameraResolution": "1080p",
      "selectedOverlays": ["vrConeOverlay", "vrConeR3FVideoOverlay"]
    }
  },
  "userConfig": {
    "arSeparation": 24,
    "arWidth": 380,
    "arHeight": 480,
    "offsetL": 0,
    "offsetR": 0,
    "zoom": 1.0,
    "cameraResolution": "720p",
    "selectedOverlays": ["vrConeOverlay"],
    "deviceType": "auto",
    "customProfile": false
  },
  "presets": {
    "mobile": {
      "arSeparation": 24,
      "arWidth": 380,
      "arHeight": 480,
      "offsetL": 0,
      "offsetR": 0,
      "zoom": 1.0,
      "cameraResolution": "720p",
      "selectedOverlays": ["vrConeOverlay"]
    },
    "desktop": {
      "arSeparation": 40,
      "arWidth": 450,
      "arHeight": 550,
      "offsetL": -10,
      "offsetR": 10,
      "zoom": 1.2,
      "cameraResolution": "1080p",
      "selectedOverlays": ["vrConeOverlay", "vrConeR3FVideoOverlay"]
    },
    "vr": {
      "arSeparation": 60,
      "arWidth": 300,
      "arHeight": 400,
      "offsetL": -20,
      "offsetR": 20,
      "zoom": 1.5,
      "cameraResolution": "4K",
      "selectedOverlays": ["vrConeR3FVideoOverlay"]
    }
  },
  "overlays": {
    "vrConeR3FVideoOverlay": {
      "mainVideo": {
        "position": [0, 5, 0],
        "scale": [5, 4, 1],
        "videoSrc": "/videos/sample.mp4"
      },
      "secondaryVideo": {
        "position": [6, 5, 0],
        "scale": [3, 2, 1],
        "videoSrc": "/videos/gangstas.mp4"
      },
      "labels": {
        "radiusBase": 8,
        "height": 10,
        "yOffset": -2
      },
      "centerMarker": {
        "position": [0, 0, 0],
        "visible": true,
        "color": "#00ff88"
      }
    },
    "vrConeOverlay": {
      "position": [0, 0, 0],
      "radiusBase": 6,
      "height": 6,
      "showUserMarker": true
    }
  }
}
